#include <stdio.h>

int main() {
    float percentage[50];
    int n, choice, i;

    printf("\nEnter number of students: ");
    scanf("%d", &n);

    printf("\nEnter percentages of %d students:\n", n);
    for (i = 0; i < n; i++) {
        printf("Student %d: ", i + 1);
        scanf("%f", &percentage[i]);
    }

    do {
        printf("\n===== MENU =====");
        printf("\n1. Selection Sort");
        printf("\n2. Bubble Sort");
        printf("\n3. Display Percentages");
        printf("\n4. Exit");
        printf("\nEnter your choice: ");
        scanf("%d", &choice);

        switch (choice) {
            case 1:
                selectionSort(percentage, n);
                printf("\nPercentages sorted using Selection Sort.\n");
                break;

            case 2:
                bubbleSort(percentage, n);
                printf("\nPercentages sorted using Bubble Sort.\n");
                break;

            case 3:
                display(percentage, n);
                break;

            case 4:
                printf("\nExiting program. Goodbye!\n");
                break;

            default:
                printf("\nInvalid choice! Please try again.\n");
        }
    } while (choice != 4);

    return 0;
}

void selectionSort(float arr[], int n) {
    int i, j, minIndex;
    float temp;

    for (i = 0; i < n - 1; i++) {
        minIndex = i;
        for (j = i + 1; j < n; j++) {
            if (arr[j] < arr[minIndex])
                minIndex = j;
        }
        temp = arr[i];
        arr[i] = arr[minIndex];
        arr[minIndex] = temp;
    }
}


void bubbleSort(float arr[], int n) {
    int i, j;
    float temp;

    for (i = 0; i < n - 1; i++) {
        for (j = 0; j < n - i - 1; j++) {
            if (arr[j] > arr[j + 1]) {
                temp = arr[j];
                arr[j] = arr[j + 1];
                arr[j + 1] = temp;
            }
        }
    }
}


void display(float arr[], int n) {
    int i;
    printf("\nStudent Percentages:\n");
    for (i = 0; i < n; i++) {
        printf("%.2f ", arr[i]);
    }
    printf("\n");
}
