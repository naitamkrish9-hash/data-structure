#include <stdio.h>
#include <stdlib.h>

int linearSearch(int arr[], int n, int key) {
    for (int i = 0; i < n; i++) {
        if (arr[i] == key)
            return i; // return index
    }
    return -1;
}

int binarySearch(int arr[], int n, int key) {
    int low = 0, high = n - 1, mid;
    while (low <= high) {
        mid = (low + high) / 2;
        if (arr[mid] == key)
            return mid;
        else if (key < arr[mid])
            high = mid - 1;
        else
            low = mid + 1;
    }
    return -1;
}

void bubbleSort(int arr[], int n) {
    for (int i = 0; i < n - 1; i++) {
        for (int j = 0; j < n - i - 1; j++) {
            if (arr[j] > arr[j + 1]) {
                int temp = arr[j];
                arr[j] = arr[j + 1];
                arr[j + 1] = temp;
            }
        }
    }
}

void display(int arr[], int n) {
    printf("Array elements: ");
    for (int i = 0; i < n; i++)
        printf("%d ", arr[i]);
    printf("\n");
}

int main() {
    int arr[50], n, choice, key, result;

    printf("Enter number of elements: ");
    scanf("%d", &n);

    printf("Enter %d elements: ", n);
    for (int i = 0; i < n; i++)
        scanf("%d", &arr[i]);

    while (1) {
        printf("\n=== SEARCH MENU ===\n");
        printf("1. Linear Search\n");
        printf("2. Binary Search (with Bubble Sort)\n");
        printf("3. Display Array\n");
        printf("4. Exit\n");
        printf("Enter your choice: ");
        scanf("%d", &choice);

        switch (choice) {
            case 1:
                printf("Enter element to search: ");
                scanf("%d", &key);
                result = linearSearch(arr, n, key);
                if (result != -1)
                    printf("%d found at position %d (Linear Search)\n", key, result + 1);
                else
                    printf("%d not found!\n", key);
                break;

            case 2:
                bubbleSort(arr, n);
                printf("Array sorted using Bubble Sort.\n");
                printf("Enter element to search: ");
                scanf("%d", &key);
                result = binarySearch(arr, n, key);
                if (result != -1)
                    printf("%d found at position %d (Binary Search)\n", key, result + 1);
                else
                    printf("%d not found!\n", key);
                break;

            case 3:
                display(arr, n);
                break;

            case 4:
                printf("Exiting program... Thank you!\n");
                exit(0);

            default:
                printf("Invalid choice! Please try again.\n");
        }
    }
    return 0;
}
